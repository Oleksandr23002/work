#include <stdio.h>

int main() {
    double t1, t2, t3;
    printf("Введіть 3 значення:");
    scanf("%lf", &t1);
    scanf("%lf", &t2);
    scanf("%lf", &t3);
    double total_rate = (1.0 / t1) + (1.0 / t2) + (1.0 / t3);
    double total_time = 1.0 / total_rate;

    printf("Час, необхідний для з'їдання пирога: ""%.2lf\n", total_time);

    return 0;
}
